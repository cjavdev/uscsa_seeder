<div class="col-md-8">
  <h1>Athletes</h1>
  <a href="/athletes.csv" class="btn btn-default pull-right">
    <i class="fa fa-cloud-download"></i> 
    CSV
  </a>
  <table class='table table-hover'>
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Eligable</th>
				<th>Bib Number</th>
				<th>USCSA Number</th>
				<th>School</th>
				<th>Team</th>
			</tr>
		</thead>
		<tbody>
			<% i = 0 %>
		  <% @schools.each do |school| %>
				<% school.teams.each do |team| %>
					<% team.athletes.each do |athlete| %>
						<tr>
							<td><%= i %></td>
							<% i += 1 %>
				    	<td><%= link_to athlete.name, athlete_path(athlete) %></td>
							<td><input type='checkbox' <% if athlete.eligible %> checked <% end %>></td>
							<td><%= athlete.bib_number %></td>
							<td><%= athlete.uscsa_number %></td>
							<td><%= school.abbreviation %> </td>
							<td><%= team.discipline.split("_").map(&:capitalize).join(" ") %></td>
						</tr>
				  <% end %>
				<% end %>
			<% end %>
		</tbody>
  </table>
	<div class="well">
	  <h3> New Athlete </h3>
		<%= render "athletes/form", athlete: @athlete %>
	</div>
</div>
	
