<div class='col-md-8'>
	<h1><%= @athlete.name %></h1>
	<%= link_to "All Athletes", athletes_path %>

  <% if current_user.admin %>
    <%= link_to "All Captains", captains_path %>
  <% end %>

	<form class='form-horizontal'>
		<div class='form-group'>
			<label for='name' class='control-label col-md-2'> Athlete Name </label>
			<div class='col-md-10'>
				<input id='name' type='text' name='athlete[name]' value='<%= @athlete.name %>'>
			</div>
		</div>
		<div class='form-group'>
			<label for='school' class='control-label col-md-2'> School </label>
			<div class='col-md-10'>
				<select id='school'>
					<% School.all.each do |school| %>
						<option id='school' type='text' name='athlete[school]' value='<%= school.name %>' <% if school == @athlete.team.school %> selected <% end %>>
							<%= school.name %>
						</option>
	        <% end %>
				</select>
			</div>
		</div>
		<div class='form-group'>
			<label for='team' class='control-label col-md-2'> Team </label>
			<div class='col-md-10'>
				<select id='team'>
					<% @athlete.team.school.teams.each do |team| %>
						<option name='athlete[school]' value='<%= team.discipline %>' <% if team.discipline == @athlete.team.discipline %>selected <% end %>>
							<%= team.discipline.split("_").map(&:capitalize).join(" ") %>
						</options>
					<% end %>
				</select>
			</div>
		</div>
		<div class='form-group'>
			<label for='bib-number' class='control-label col-md-2'> Bib Number </label>
			<div class='col-md-10'>
				<input id='bib-number' type='number' name='athlete[bib_number]' value='<%= @athlete.bib_number %>'>
			</div>
		</div>
		<div class='form-group'>
			<label for='eligible' class='control-label col-md-2'> Eligible </label>
			<div class='col-md-10'>
				<input id='eligible' type='checkbox' name='athlete[eligible]' <% if @athlete.eligible %> checked <% end %>>
			</div>
		</div>
	</form>
</div>
