<div class="col-md-8">
  <h1>Schools</h1>

  <table class='table table-hover'>
		<thead>
			<tr>
				<th>#</th>
				<th>Abbr.</th>
				<th>Name</th>
				<th>Teams</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
		  <% @schools.each do |school| %>
        <tr>
          <td> <%= school.id %> </td>
          <td> <%= link_to school.abbreviation, school %> </td>
          <td> <%= link_to school.name, school %> </td>
          <td> <%= school.teams_count %> </td>
					<% if current_user.admin || current_user.officer %>
	          <td>
	            <%= button_to 'Delete',
	              school,
	              method: :delete,
	              class: 'btn btn-xs btn-danger',
	              data: { confirm: 'Are you sure you want to delete this school?' } %>
	          </td>
					<% end %>
        </tr>
		  <% end %>
		</tbody>
  </table>

  <% if current_user.admin %>
    <div class="well">
      <h3> New School </h3>

      <%= render 'form', school: @school %>
    </div>
  <% end %>
</div>
