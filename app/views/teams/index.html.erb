<div class="col-md-8">
  <h1>Teams</h1>

  <ul>
  <% @schools.each do |school| %>
    <li> <%= link_to school.name, school %> </li>
		<ul>
			<% school.teams.each do |team| %>
				<li> <%= link_to team.discipline.split("_").map(&:capitalize).join(" "), team %> </li>
			<% end %>
		</ul>
  <% end %>
  </ul>
</div>
