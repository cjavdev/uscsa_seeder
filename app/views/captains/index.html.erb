<div class='col-md-8'>
	<h1>Captains</h1>

	<ul>
	  <% @schools.each do |school| %>
	    <li>
	      <%= school.name %>
	      <ul>
	      <% school.captains.each do |captain| %>
	        <li><%= link_to captain.name, captain %><li>
	      <% end %>
	      </ul>
	    </li>
	  <% end %>
	</ul>

  <div class="well">
    <h3>Invite Captain</h3>

    <form action="<%= captain_invitations_path %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <select name="invitation[athlete_id]">
          <% @athletes.each do |athlete| %>
            <option value="<%= athlete.id %>"><%= athlete.name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <input type="text" name="invitation[email]" placeholder="email">
      </div>
      <input type="submit" value="Submit">
    </form>
  </div>
</div>
