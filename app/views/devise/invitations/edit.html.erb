<div class='row'>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <div class="well">
      <%= form_for resource, :as => resource_name,
        url: invitation_path(resource_name),
        html: { method: :put } do |f| %>
        <h2><%= t 'devise.invitations.edit.header' %></h2>
        <br>
        <%= devise_error_messages! %>
        <%= f.hidden_field :invitation_token %>
        <%= f.hidden_field :captain, value: true %>

        <div class='form-group'>
          <%= f.label :password, class: "col-md-2 col-md-offset-1 control-label" %>
          <div class='col-md-8'>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <br>
        <br>
        <div class='form-group'>
          <div class='col-md-6 col-md-offset-3'>
            <p><%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary' %></p>
          </div>
        </div>
        <br>
      <% end %>
    </form>
  </div>
</div>
