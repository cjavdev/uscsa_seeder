<div class='row'>
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(resource, as: resource_name,
			url: session_path(resource_name),
			html: { id: "login-form", class: "form-horizontal" }) do |f| %>
			
			<h2 class='center'>Log in</h2>
			<br>
				
		  <div class='form-group'>
				<%= f.label :email, class: "col-md-2 col-md-offset-1 control-label" %>
				<div class='col-md-8'>
					<%= f.email_field :email, autofocus: true, class: "form-control" %>
				</div>
			</div>

		  <div class='form-group'>
				<%= f.label :password, class: "col-md-2 col-md-offset-1 control-label" %>
				<div class='col-md-8'>
					<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
				</div>
			</div>
			<div class='row'>
				<div class="col-md-2 col-md-offset-3">
					<%= f.submit "Log in", class: "btn btn-primary" %>
				</div>
				<div class='col-md-5'>
				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "control-label" %></div>
				  <% end -%>
				</div>
			</div>
			<br>
			<div class='row'>
				<div class='col-md-6 col-md-offset-3'>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		<% end %>
	</div>
</div>


